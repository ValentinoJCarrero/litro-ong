---
import ButtonCTA from "../../Buttons/ButtonCTA.astro";
import COPIAimgPortada from "../../../assets/COPIAimgPortada.jpg";
import { Image } from "astro:assets";
---

<div class="relative my-3">
  <div class="absolute inset-0" style={{ backgroundImage: ` linear-gradient(to right, rgba(255, 255, 255,0.99) 35%, transparent 100%)` }}></div>
  <Image src={COPIAimgPortada} alt="La imagen" class="w-full object-cover bg-cover bg-center h-full" loading="lazy" decoding="async"/>
  <div class="absolute inset-0 top-24 left-44 flex flex-col gap-16">
    <div>
      <h1 class="text-6xl font-bold mb-3">NUESTRA MISIÓN</h1>
      <h2 class="text-2xl w-3/5 font-medium">Estamos permanentemente activos para reducir las desigualdades socioeconómicas existentes en la sociedad</h2>
    </div>
    <a href="/aboutMe">
      <ButtonCTA title="Más sobre Nosotros" />
    </a>
  </div>
</div>
